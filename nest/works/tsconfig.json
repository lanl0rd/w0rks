{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      "preserveSymlinks": true,
      "resolveJsonModule": true
    },
    "exclude": [
      "node_modules",
      "dist",
      "**/*.spec.ts",
      "**/*.ng.ts",
      "*.ng.ts"
    ]
  }
  